@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Crear Producto";
    ViewData["BodyClass"] = "producto-fondo";
}

<style>
    .form-container {
        background-color: rgba(0,0,0,0.7);
        padding: 30px;
        border-radius: 10px;
        color: white;
    }

        .form-container label {
            font-weight: 500;
        }

        .form-container input,
        .form-container select,
        .form-container textarea {
            background-color: #f8f9fa;
            color: black;
        }
</style>

<div class="container my-5 form-container">
    <h2 class="mb-4 text-light"><i class="bi bi-plus-circle"></i> Crear Producto</h2>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- CAMPOS -->
        <div class="form-group mb-3">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Precio"></label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CategoriaId"></label>
            @Html.DropDownListFor(model => model.CategoriaId, new SelectList(Model.Categorias, "CategoriaId", "Nombre"), "--Select Category--", new { @class = "form-select" })
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ImagenUrl"></label>
            <input asp-for="ImagenUrl" class="form-control" />
            <span asp-validation-for="ImagenUrl" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FechaAgregado"></label>
            <input asp-for="FechaAgregado" class="form-control" />
            <span asp-validation-for="FechaAgregado" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Descuento"></label>
            <input asp-for="Descuento" class="form-control" />
            <span asp-validation-for="Descuento" class="text-danger"></span>
        </div>

        <!-- BOTONES -->
        <div class="d-flex gap-2">
            <input type="submit" value="Crear" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
