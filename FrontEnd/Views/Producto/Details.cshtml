@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Details";
}

<style>
    .cuadro-detalles {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 30px;
        border-radius: 10px;
        color: white;
    }
</style>

<div class="card mb-3" style="max-width: 1000px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImagenUrl" alt="Imagen del producto" style="max-width: 300px; height: auto;" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title fw-bold text-primary">Detalle del producto</h5>
                <p class="card-text">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Precio)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Precio)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.CategoriaNombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CategoriaNombre)
                        </dd>
                       
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.FechaAgregado)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaAgregado)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Descuento)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Descuento)
                        </dd>
                    </dl>
                </p>
                <div>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductoId }) |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
