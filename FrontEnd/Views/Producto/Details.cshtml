@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Details";
}

<style>
    .cuadro-detalles {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 30px;
        border-radius: 10px;
        color: white;
    }
</style>
@{
    @inject IHttpContextAccessor HttpContextAccessor

    var user = HttpContextAccessor.HttpContext?.User;
    var isAdmin = user.IsInRole("Administrador");
}
<div class="container my-5 cuadro-detalles">
    <h1>Details</h1>

    <div>
        <h4>ProductoViewModel</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductoId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductoId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Precio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoriaNombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoriaNombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImagenUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImagenUrl)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaAgregado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaAgregado)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descuento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descuento)
            </dd>
        </dl>
    </div>
    <div>
        @if (isAdmin)
        {
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductoId })
        }
        <a asp-action="Index">Back to List</a>
    </div>
</div>

