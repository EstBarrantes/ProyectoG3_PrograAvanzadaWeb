@model FrontEnd.Models.ProductoViewModel

@{
    ViewData["Title"] = "Eliminar Producto";
    ViewData["BodyClass"] = "producto-fondo";
}

<style>
    .delete-container {
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 30px;
        border-radius: 10px;
    }

        .delete-container h2 {
            color: #ff4d4d;
        }
</style>

<div class="container my-5 delete-container">
    <h2 class="mb-3"><i class="bi bi-trash-fill"></i> ¿Estás seguro de eliminar este producto?</h2>

    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">Precio</dt>
        <dd class="col-sm-9">$@Model.Precio</dd>

        <dt class="col-sm-3">Categoría</dt>
        <dd class="col-sm-9">@Model.CategoriaNombre</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductoId" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
