@model IEnumerable<FrontEnd.Models.ProductoViewModel>

@{
    ViewData["Title"] = "Productos";
    ViewData["BodyClass"] = "producto-fondo";
}

<style>
    .card-producto {
        background-color: rgba(0, 0, 0, 0.75);
        color: white;
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        transition: transform 0.2s ease-in-out;
    }

        .card-producto:hover {
            transform: scale(1.02);
        }

        .card-producto img {
            object-fit: cover;
            height: 200px;
            border-radius: 10px 10px 0 0;
        }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .btn-action {
        margin: 0 3px;
    }

    .titulo-productos {
        color: #1a1a1a;
    }
</style>

<div class="container my-4">
    <h2 class="mb-4 titulo-productos"><i class="bi bi-box-seam"></i> Catálogo de Productos</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear nuevo producto</a>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card card-producto h-100">
                    <img src="@item.ImagenUrl" class="card-img-top" alt="@item.Nombre" onerror="this.src='/img/no-image.png';" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text mb-1">Categoría: <strong>@item.CategoriaNombre</strong></p>
                        <p class="card-text mb-1">Precio: <strong>$@item.Precio</strong></p>
                        <p class="card-text mb-1">Descuento: @item.Descuento%</p>
                        <p class="card-text text-muted" style="font-size: 0.85rem;">Agregado: @item.FechaAgregado.ToShortDateString()</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-primary btn-sm btn-action">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn btn-info btn-sm btn-action">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-danger btn-sm btn-action">
                            <i class="bi bi-trash"></i>
                        </a>
                            <div class="d-flex align-items-center gap-2">
        <div class="input-group input-group-sm w-auto">
            <button class="btn btn-outline-secondary btn-restar" type="button">-</button>
            <input type="number" class="form-control text-center cantidad-producto" value="0" min="1" style="width: 50px;" />
            <button class="btn btn-outline-secondary btn-sumar" type="button">+</button>
        </div>

        <button class="btn btn-warning btn-sm btn-action btn-agregar-carrito"
            data-id="@item.ProductoId"
            data-nombre="@item.Nombre"
            data-precio="@item.Precio">
            <i class="bi bi-cart-plus"></i>
        </button>
    </div>


                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        $(document).on('click', '.btn-sumar', function () {
            var input = $(this).siblings('input');
            input.val(parseInt(input.val()) + 1);
        });

        $(document).on('click', '.btn-restar', function () {
            var input = $(this).siblings('input');
            var val = parseInt(input.val());
            if (val > 1) input.val(val - 1);
        });

        $('.btn-agregar-carrito').click(function () {
            var btn = $(this);
            var cantidad = btn.siblings('.input-group').find('.cantidad-producto').val();

            $.post('/Carrito/Agregar', {
                id: btn.data('id'),
                nombre: btn.data('nombre'),
                precio: btn.data('precio'),
                cantidad: cantidad
            }).done(function () {
                btn.addClass('btn-success').removeClass('btn-warning');
                btn.html('<i class="bi bi-check-circle"></i>');
                actualizarVistaCarrito();
            });
        });

        function actualizarVistaCarrito() {
            $('#carritoContenido').load('Carrito');
        }
    });
</script>

