@model FrontEnd.Models.CategoryViewModel

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h1 class="text-danger mb-3"><i class="bi bi-trash3-fill"></i> Eliminar Categoría</h1>

<h4 class="text-warning">¿Estás seguro que deseas eliminar esta categoría?</h4>

<hr />
<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoriaId)</dd>

    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>
</dl>

<form asp-action="Delete" onsubmit="return confirm('¿Estás seguro que deseas eliminar esta categoría?');">
    @Html.HiddenFor(model => model.CategoriaId)

    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash3"></i> Eliminar
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
