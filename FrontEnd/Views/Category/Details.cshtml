@model FrontEnd.Models.CategoryViewModel

@{
    ViewData["Title"] = "Detalles de Categoría";
}

<h1><i class="bi bi-info-circle"></i> Detalles de Categoría</h1>

<hr />
<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoriaId)</dd>

    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>
</dl>

<div class="mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.CategoriaId }, new { @class = "btn btn-primary" })
    <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}
