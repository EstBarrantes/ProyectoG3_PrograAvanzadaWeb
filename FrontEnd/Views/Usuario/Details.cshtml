@model FrontEnd.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de que exista tu layout general
}

<style>
    .cuadro-usuario {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 30px;
        border-radius: 12px;
        color: white;
    }

        .cuadro-usuario dt {
            font-weight: bold;
            color: #0dcaf0;
        }

        .cuadro-usuario hr {
            border-color: #ccc;
        }
</style>

<div class="container my-5 cuadro-usuario">
    <h1 class="mb-4">Detalles del Usuario</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.UsuarioID</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Apellido</dt>
        <dd class="col-sm-9">@Model.Apellido</dd>

        <dt class="col-sm-3">Correo</dt>
        <dd class="col-sm-9">@Model.Correo</dd>

        <dt class="col-sm-3">Rol</dt>
        <dd class="col-sm-9">@Model.RolId</dd>

        <dt class="col-sm-3">Activo</dt>
        <dd class="col-sm-9">@Model.Activo</dd>

        <dt class="col-sm-3">Dirección</dt>
        <dd class="col-sm-9">@Model.Direccion</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="ListadoDeUsuarios" class="btn btn-outline-light">Volver al listado</a>
    </div>
</div>