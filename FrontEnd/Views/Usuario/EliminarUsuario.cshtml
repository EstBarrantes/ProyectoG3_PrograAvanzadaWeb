@model FrontEnd.Models.UsuarioViewModel

@{
    ViewData["Title"] = "EliminarUsuario";
    Layout = "~/Views/_ViewImports.cshtml";
}

<style>
    .cuadro-usuario {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 30px;
        border-radius: 12px;
        color: white;
    }

        .cuadro-usuario dt {
            font-weight: bold;
        }

        .cuadro-usuario hr {
            border-color: #ccc;
        }
</style>

<div class="container my-5 cuadro-usuario">
    <h1>EliminarUsuario</h1>
    <h3 class="text-warning">¿Estás seguro que deseas eliminar este usuario?</h3>

    <h4>UsuarioViewModel</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UsuarioID)</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Apellido)</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Correo)</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RolId)</dd>

        <dt class="col-sm-2">FechaRegistro</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaRegistro)</dd>

        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Activo)</dd>

        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Direccion)</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefono)</dd>
    </dl>

    <form asp-action="EliminarUsuario">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>
