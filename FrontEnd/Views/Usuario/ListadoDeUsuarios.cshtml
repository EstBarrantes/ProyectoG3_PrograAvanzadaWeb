@model IEnumerable<FrontEnd.Models.UsuarioViewModel>

@{
    ViewData["Title"] = "ListadoDeUsuarios";
}

<style>
    .cuadro-tabla {
        background-color: rgba(0, 255, 255, 0.2);
        padding: 30px;
        border-radius: 12px;
        color: #000;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

        .cuadro-tabla h1 {
            color: #0dcaf0;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .cuadro-tabla table thead {
            background-color: rgba(13, 202, 240, 0.3);
        }

        .cuadro-tabla th, .cuadro-tabla td {
            vertical-align: middle;
            text-align: center;
        }

        .cuadro-tabla a.btn {
            font-weight: 500;
            padding: 5px 10px;
            border-radius: 6px;
        }

        .cuadro-tabla a.btn-sm {
            font-size: 0.85rem;
        }

        .cuadro-tabla .acciones {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 5px;
        }
</style>

<div class="container my-5 cuadro-tabla">
    <h1>Listado de Usuarios</h1>

    <p>
        <a asp-action="ViewCrearUsuario" class="btn btn-success">+ Crear nuevo</a>
    </p>

    <table class="table table-bordered table-hover bg-white text-dark">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.UsuarioID)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                <th>@Html.DisplayNameFor(model => model.Correo)</th>
                <th>@Html.DisplayNameFor(model => model.Contrasena)</th>
                <th>@Html.DisplayNameFor(model => model.RolId)</th>
                <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                <th>@Html.DisplayNameFor(model => model.Activo)</th>
                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UsuarioID)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contrasena)</td>
                    <td>@Html.DisplayFor(modelItem => item.RolId)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                    <td>@Html.DisplayFor(modelItem => item.Activo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td class="acciones">
                        <a asp-action="EditarUsuario" asp-route-id="@item.UsuarioID" class="btn btn-outline-primary btn-sm">
                            ✏️ Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.UsuarioID" class="btn btn-outline-info btn-sm">
                            📄 Detalles
                        </a>
                        <a asp-action="EliminarUsuario" asp-route-id="@item.UsuarioID" class="btn btn-outline-danger btn-sm">
                            🗑️ Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
