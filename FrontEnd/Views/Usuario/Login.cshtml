@model UsuarioViewModel

@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Opcional. Si NO quieres usar layout, pon "null"
}

<style>
    .cuadro-login {
        background-color: rgba(0, 0, 0, 0.75);
        padding: 40px;
        border-radius: 12px;
        color: white;
        max-width: 400px;
        margin: auto;
        margin-top: 80px;
        box-shadow: 0 0 15px rgba(0,0,0,0.4);
    }

        .cuadro-login label {
            color: #fff;
        }

        .cuadro-login .form-control {
            background-color: #f8f9fa;
            color: black;
        }

        .cuadro-login .btn {
            width: 100%;
        }

        .cuadro-login a {
            color: #0dcaf0;
        }

            .cuadro-login a:hover {
                text-decoration: underline;
            }
</style>

<div class="cuadro-login">
    <h2 class="text-center mb-4">Iniciar Sesión</h2>

    <form asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Correo" class="control-label">Correo electrónico</label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Contrasena" class="control-label">Contraseña</label>
            <input asp-for="Contrasena" class="form-control" type="password" />
            <span asp-validation-for="Contrasena" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <input type="submit" value="Ingresar" class="btn btn-primary" />
        </div>

        <div class="text-center">
            ¿No tienes cuenta?
            @Html.ActionLink("Registrarse", "ViewCrearUsuario", "Usuario")
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
